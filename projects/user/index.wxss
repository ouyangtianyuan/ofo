/* projects/user/index.wxss */

.container {
  background: #f5f5f5;
  height: 100vh;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}

.user-info {
  background: #fff;
  width: 100%;
  text-align: center;
  padding: 50rpx 0;
}

.img {
}

.img .img-info {
  border: 1px solid #d3d3d3;
  background:#f3f3f3;
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.money {
  width: 100%;
  flex: 6;
}

.money .main {
  padding: 0 10px;
  background: #fff;
  height: 50px;
  line-height: 50px;
  margin-top: 10px;
  position: relative;
}

.money .main .ic {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  color: #d3d3d3;
  font-weight: bold;
}

.btn {
  padding: 10px;
  background: #fff;
  width: 100%;
}

.btn button {
  width: 94%;
  margin: 0 auto;
}

.btn button.on {
  background: #fee823;
  color: #2b2b2b;
}

.btn button.off {
  background: rgb(219, 58, 80);
  color: #fff;
}
