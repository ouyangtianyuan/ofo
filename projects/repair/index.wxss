.container{
  width:100%;
  height:100vh;
  background:#f5f5f5;
}
.tit{
  padding:10px 20rpx;
  color:#a0a0a0;
}
.mylist{
  background:#fff;
  display:flex;
  flex-wrap:wrap;
  padding:10px 5px;
}
.mylist .grid{
  padding:5px 10rpx;
  width:45%;
}
