.action{
  
}
.action .photo{
  background:#fff;
  padding:20px 0;
}
.action .photo image{
  width:136rpx;
  height:136rpx;
  position:relative;
  overflow: visible;
  margin:10px
}
.action .photo image icon{
  position:absolute;
  top:-10px;
  right:-10px;
}
.action .photo .add{
   display:inline-block;
   height:136rpx;
   width:136rpx;
   text-align:center;
   border:1px dotted #dbdbdb;
   line-height:136rpx;
   font-size:30rpx;
   color:#ccc;
   vertical-align: top;
   margin:10px
}
.inps{
  background:#fff;
  margin-top:15px;
  margin-bottom:15px;
}
.inps input{
  padding:0 10px;
  height:50px;
}
.inps input:first-child{
  border:1px solid #f5f5f5;
}
.sub{
  background:#fff;
  padding:10px;
}
.sub button{
  background:#fee823;
  color:#2b2b2b;
}