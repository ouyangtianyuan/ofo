/* projects/wallet/index.wxss */
.container{
  width:100%;
  height:100vh;
  background:#f5f5f5;
}
.my-wallet{
    background:#fff;
    padding:20px 10px;
    text-align:center;
}
.my-wallet .num{
  font-size:100rpx;
  padding:0 10px;
  margin:20px 0 ;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.my-wallet .btn{
  border:1px solid #d8d8d8;
  display:inline-block;
  padding:0 14px;
  height:26px;
  line-height:26px;
  font-size:30rpx;
  color:#c0c0c0;
  border-radius:15px;
}

.rech{
  padding:15px 10px;
}

.rech button{
  background:#fee823;
  color:#2b2b2b;
}
.con{
  margin-bottom:15px;
  background:#fff;
}
.con .item{
  border:1px solid #f5f5f5;
  height:50px;
  line-height:50px;
  padding:0 10px;
  position:relative;
}
.con .item .rig{
  position:absolute;
  top:50%;
  transform:translateY(-50%);
  right:10px;
}
.con .item .rig .ic{
  margin-left:5px;
  color: #d3d3d3;
  font-weight: bold;
}
.con .item .rig .reflink{
  color:#a4ca1a;
}